# Copy this file to .env and adjust as needed

# Postgres (Docker Compose defaults)
POSTGRES_DB=aletheia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# SQLAlchemy connection string
# For Docker Compose use host 'db'; for direct local runs, change host to 'localhost'
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/aletheia

# OpenAI (leave blank for local fallbacks)
# Provide a real key only when using real API calls (set DEV_FALLBACKS=false)
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# Development fallbacks: when true, use deterministic local responses
DEV_FALLBACKS=false

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Optional: OpenWebUI
OPENAI_API_BASE_URL=http://aletheia-api:8000/v1
TZ=UTC
