# Production environment for logos deployment
# Copy to .env on logos and update values as needed

# PostgreSQL connection (uses existing PostgreSQL on logos, not Docker)
POSTGRES_DB=aletheia
POSTGRES_USER=aletheia
POSTGRES_PASSWORD=aletheia

# DATABASE_URL points to PostgreSQL running on localhost (from container perspective)
# Use host.docker.internal or the actual IP if bridge networking
DATABASE_URL=postgresql+psycopg://aletheia:aletheia@10.0.0.1:5432/aletheia

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
SIMILARITY_METRIC=cosine

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Development fallbacks: set to false for production
DEV_FALLBACKS=false

# pgvector IVFFlat tuning
PGVECTOR_ENABLE_IVFFLAT=true
PGVECTOR_IVFFLAT_LISTS=100

# CORS - add your actual frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://10.0.0.1:3000,http://logos:3000

# OpenWebUI configuration
OPENAI_API_BASE_URL=http://aletheia-api:8000/v1
TZ=America/New_York
